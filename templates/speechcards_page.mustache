<div class='container'>
  <!-- Page contents -->

  <div class="panel panel-default" id='activity'>
    <div class="panel-body">

      <div id='vocab-list'>{{> mod_wordcards/vocablist_header}}
        <div id="vocab-list-inner">{{> mod_wordcards/loading}}</div>
      </div>

      <div id='gameboard'>

        <div class="mod_wordcards_activity_header">
          <h3>{{#str}}title_speechcards, mod_wordcards{{/str}}</h3>
          <div class="mod_wordcards_instructions">{{#str}}instructions_speechcards, mod_wordcards{{/str}}</div>
        </div>

        <div id='counter'>
          <div id='time-counter'></div>
        </div>

        {{> mod_wordcards/progress_dots}}

        <div id="speechcards_glide" class="glide">

          <div id="submitted"></div>

          <div class="glide__wrapper">
            <ul id="speechcards_thelist" class="glide__track"></ul>
          </div>

          <div class="glide__arrows wordcards-speechcards_toprow">

            {{> mod_wordcards/cloudpushrecorder}}

            <button class="btn btn-success wordcards-speechcards_button wordcards-speechcards_nextbutton " data-glide-dir=">">
                {{#str}}next, mod_wordcards{{/str}}
              </button>

          </div>

        </div>

        <div id="speechcards_bullets" class="poodllspeechcards__bullets" style="display: none"></div>

        <div id='input'></div>

      </div>

      <div id='results'>
        <div id='results-inner'>{{> mod_wordcards/loading}}</div>
      </div>

    </div>

    <!-- End page contents -->
  </div>