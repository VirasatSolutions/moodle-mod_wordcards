<div id='chunk-input' data-id='"+id+"' class='noselect'>
    <div id='chunk-typed'><div id='chunk-typed-inner'></div></div>
    {{#letters}}<div class='chunk-key' data-val='{{charcode}}'><div class='chunk-key-inner'>{{{letter}}}</div></div>{{/letters}}
    <div id='chunk-input-controls'>
        <div id='delete-chunk-input' class='btn-primary chunk-input-control'><i class='fa fa-caret-square-o-left'></i> {{#str}}delete, mod_wordcards{{/str}}</div><div id='submit-chunk-input' class='btn-success chunk-input-control'>{{#str}}submit, mod_wordcards{{/str}} <i class='fa fa-arrow-circle-right'></i></div>
    </div>
</div>